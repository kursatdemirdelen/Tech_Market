@model Ticaret.Models.UserProfile
@{
    ViewBag.Title = "UserProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">

            <div class="span9">


                @using (Html.BeginForm("UserProfil", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)



                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <table class="table table-bordered">
                        <tr><th> Profil Bilgileri </th></tr>
                        <tr>
                            <td>


                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Ad</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Soyad</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Kullanıcı Adı</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Email</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <div class="controls">
                                        <button type="submit" class="btn btn-success">Güncelle</button>
                                        <a href="/Account/ChangePassword">Şifre Değiştir</a>
                                    </div>
                                </div>
 

                            </td>
                        </tr>
                    </table>}



            </div>
        </div>
    </div>
</div>
