@model Ticaret.Models.OrderDetails
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
             
            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a> <span class="divider">/</span></li>
                    
                </ul>
                <h3> Sipariş Detay Sayfası </h3>
                <hr class="soft" />

                <table id="compairTbl" class="table table-bordered">

                    <tbody>
                        <tr>
                            <td>Sipariş Durumu</td>
                            <td>
                                @if (Model.EnumOrderState == Ticaret.Entity.EnumOrderState.Bekleniyor)
                                {
                                    <a class="btn btn-danger">Siparis bekleniyor</a>
                                }
                                else if (Model.EnumOrderState == Ticaret.Entity.EnumOrderState.Tamamlandı)
                                {
                                    <a class="btn btn-success">Siparis tamamlandı</a>
                                }
                                else if (Model.EnumOrderState == Ticaret.Entity.EnumOrderState.Paketlendi)
                                {
                                    <a class="btn btn-info">Siparis paketlendi</a>
                                }
                                else if (Model.EnumOrderState == Ticaret.Entity.EnumOrderState.Kargolandı)
                                {
                                    <a class="btn btn-primary">Siparis kargoya verildi</a>
                                }
                        </td>

                    </tr>
                    <tr>
                        <td>Sipariş Id</td>
                        <td>@Model.OrderId</td>
                    </tr>
                    <tr>
                        <td>Sipariş Numarası</td>
                        <td>@Model.OrderNumber</td>
                    </tr>
                    <tr>
                        <td>Toplam  tutar(₺)</td>
                        <td>@Model.Total</td>
                    </tr>
                    <tr>
                        <td>Tarih</td>
                        <td>@Model.OrderDate</td>
                    </tr>
                    <tr>
                        <td>Adres</td>
                        <td>
                            @Model.AdresBasligi
                        <br />
                        @Model.Adres
                        <br />
                        @Model.Mahalle - @Model.Semt -@Model.Sehir @Model.PostaKodu
                    </td>
                </tr>



            </tbody>
        </table>
        <table id="compairTbl" class="table table-bordered">
            <thead>
                <tr>
                    <th>Resim</th>
                    <th>Ürün Adı</th>
                    <th>Toplam Fiyat (₺)</th>
                    <th>Adet</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderLines)
                {
                    <tr>
                        <td><img src="~/Content/image/@item.Image" height="75" width="75" /></td>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a href="/Home/ProductDetails/@item.ProductId" class="btn btn-primary" target="_blank"> Ürün detay</a>
                        </td>

                    </tr>
                }
                 
            </tbody>
        </table> 
    </div>
</div>
</div>
</div>