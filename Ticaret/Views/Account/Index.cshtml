@using Ticaret.Models
@model IEnumerable<UserOrder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">

            <div class="span9">

                
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Toplam Tutar</th>
                                <th>Sipariş Durumu</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
 
                                <tr>
                                    <td>@item.OrderNumber</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.Total</td>
                                    <td>@item.EnumOrderState</td>
                                    <td>@Html.ActionLink("Sipariş Detay","Details",new { id=@item.Id },new { @class="btn btn-primary" })</td>
                                </tr>
                            }
                        </tbody>
                
                    </table>
                 
            </div>
        </div>
    </div>
</div>
