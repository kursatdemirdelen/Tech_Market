@using Ticaret.Entity
@model IEnumerable<Product>
<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">
                @Html.Action("Summary", "Cart")
                <ul id="sideManu" class="nav nav-tabs nav-stacked">
                    @Html.Action("_CategoryList", "Category")
                </ul>
                <br />
                <div class="thumbnail">
                    <img src="/tema-shop/themes/images/payment_methods.png" title="Payment Methods" alt="Payments Methods">
                    <div class="caption">
                        <h5>Ödeme Yöntemleri</h5>
                    </div>
                </div>
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                @Html.Action("_FeaturedProductList","Home")
                <h4>Ürünler </h4>
                <ul class="thumbnails">
                    @foreach (var item in Model)
                    {
                        <li class="span3">
                            <div class="thumbnail">
                                <a href="/home/ProductDetails/@item.Id"><img src="~/Content/image/@item.image"   style="max-height:250px;max-width:250px;min-height:250px;min-width:250px;" /></a>
                                <div class="caption">
                                    <h5>@item.Name</h5>
                                     
                                    <h4 style="text-align:center"><a class="btn" href="/Home/ProductDetails/@item.Id">Görüntüle <i class="icon-shopping-cart"></i></a> <button type="button" class="btn btn-lg btn-primary"  disabled>@item.price ₺</button></h4>
                                </div>
                            </div>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </div>
</div>

