@using Ticaret.Entity
@model IEnumerable<Order>
@{
    ViewBag.Title = "TamamlananSiparisler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Tamamlanan Sipariş Listesi</h3>
                </div><!-- /.box-header -->

                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sipariş id</th>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Fiyat (₺)</th>

                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id
                                    <td>
                                        @item.OrderNumber
                                    </td>
                                    <td>
                                        @item.OrderDate
                                    </td>
                                    <td>
                                        @item.EnumOrderState
                                    </td>
                                    <td>
                                        @item.Total
                                    </td>

                                    <td>
                                        <a class="btn btn-danger" href="@Url.Action("Details", new { id=item.Id })">  Sipariş Detay</a>
                                    </td>


                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sipariş id</th>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Fiyat (₺)</th>

                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

